  <div class="nano">
    <div class="nano-content">

      <!--Profile Widget-->
      <!--================================-->
      <div id="mainnav-profile" class="mainnav-profile">
        <div class="profile-wrap">
          <div class="pad-btm">
            <%= image_tag 'ad/1.png', class: 'img-circle img-sm img-border', alt: 'Profile' %>
          </div>
          <a href="#profile-nav" class="box-block" data-toggle="collapse" aria-expanded="false">
            <span class="pull-right dropdown-toggle">
                <i class="dropdown-caret"></i>
            </span>
            <p class="mnp-name"><%= current_ad_user.academy.name %></p>
            <span class="mnp-desc"><%= current_ad_user.email %></span>
          </a>
        </div>
        <div id="profile-nav" class="collapse list-group bg-trans">

          <%= link_to edit_ad_user_registration_path, class: 'list-group-item' do %>
            <i class="ti-user"></i> Minha conta
          <% end %>

          <a href="#" class="list-group-item">
            <i class="ti-share-alt"></i> Sair
          </a>
        </div>
      </div>

      <ul id="mainnav-menu" class="list-group">

        <!--Category name-->
        <li class="list-header">MENU</li>

        <li class="active-link">
          <%= link_to ad_root_path do %>
            <i class="ti-home"></i>
            <span class="menu-title">
              <strong>Dashboard</strong>
            </span>
          <% end %>
        </li>



      </ul>
    </div>
  </div>
